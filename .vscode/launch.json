  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Server",
      "request": "launch",
      "runtimeArgs": [
        "--experimental-loader",
        "esbuild-node-loader",
        "-r",
        "dotenv/config",
        "src/index.ts"
      ],
      "runtimeExecutable": "node",
      "cwd": "${workspaceFolder}/packages/deployment-server",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    },
    {
      "name": "Debug Deployment-Server tests",
      "request": "launch",
      "runtimeArgs": ["run", "test"],
      "runtimeExecutable": "yarn",
      "cwd": "${workspaceFolder}/packages/deployment-server",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    }
  ]
}
