{
  "name": "deployment-server",
  "version": "1.0.0",
  "description": "Deployment-Server for the cdtcloud-deploymentserver service",
  "homepage": "https://github.com/eclipsesource/cdtcloud-deploymentserver/tree/main/packages/deployment-server",
  "main": "src/index.ts",
  "repository": "git@github.com:EclipseSource/cdtcloud-deploymentserver.git",
  "license": "EPL-2.0",
  "bugs": {
    "url": "https://github.com/EclipseSource/cdtcloud-deploymentserver/issues"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "nts": "node --loader esbuild-node-loader",
    "dev": "nodemon -x node --loader esbuild-node-loader -r dotenv/config src/index.ts",
    "start": "yarn nts src/index.ts",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "c8 tap",
    "test:dev": "tap -w",
    "typecheck": "tsc -noEmit",
    "prepare": "yarn prisma generate && yarn tsc",
    "update:db": "yarn run prisma migrate deploy && yarn run prisma db seed"
  },
  "tap": {
    "node-arg": [
      "--no-warnings",
      "--loader=esbuild-node-loader"
    ],
    "no-coverage-report": true,
    "test-env": [
      "NODE_ENV=test",
      "DATABASE_URL=postgresql://postgres:dev@0.0.0.0:5432/deploymentdb?schema=public",
      "HOST=localhost"
    ],
    "files": [
      "test/**/*.spec.ts"
    ]
  },
  "prisma": {
    "seed": "yarn nts prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^3.9.1",
    "@sinclair/typebox": "^0.21.2",
    "close-with-grace": "^1.1.0",
    "cors": "^2.8.5",
    "esbuild-node-loader": "^0.6.3",
    "eslint-plugin-header": "^3.1.1",
    "express": "^4.17.1",
    "express-json-validator-middleware": "^2.2.1",
    "helmet": "^5.0.1",
    "multer": "^1.4.3",
    "multer-cloud-storage": "^2.8.0",
    "pino-http": "^6.3.3",
    "pino-pretty": "^7.2.0",
    "statuses": "^2.0.1",
    "undici": "^4.10.1",
    "ws": "^8.3.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.11.7",
    "@types/pino-http": "^5.8.1",
    "@types/statuses": "^2.0.0",
    "@types/tap": "^15.0.5",
    "@types/ws": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "c8": "^7.10.0",
    "dotenv": "^10.0.0",
    "eslint": "^8.2.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-license-header": "^0.4.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "nodemon": "^2.0.15",
    "prisma": "^3.9.1",
    "tap": "^15.1.1",
    "typescript": "^4.5.2"
  },
  "engines": {
    "node": ">=16.5.0"
  }
}
