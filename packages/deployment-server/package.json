{
  "name": "deployment-server",
  "version": "0.0.0",
  "main": "src/index.ts",
  "repository": "git@github.com:EclipseSource/cdtcloud-deploymentserver.git",
  "author": "WoH <wolfgang@hey.com>",
  "license": "EPL-2.0",
  "type": "module",
  "scripts": {
    "nts": "node --experimental-loader esbuild-node-loader",
    "dev": "nodemon -x node --experimental-loader esbuild-node-loader  -r dotenv/config src/index.ts",
    "start": "yarn nts src/index.ts",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "tap",
    "test:dev": "tap -w --no-coverage-report",
    "typecheck": "tsc -noEmit"
  },
  "tap": {
    "node-arg": [
      "--experimental-loader=esbuild-node-loader"
    ],
    "no-check-coverage": true,
    "test-env": [
      "NODE_ENV=test"
    ],
    "files": [
      "test/**/*.spec.ts"
    ]
  },
  "prisma": {
    "seed": "yarn nts prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^3.5.0",
    "@sinclair/typebox": "^0.21.2",
    "close-with-grace": "^1.1.0",
    "esbuild-node-loader": "^0.6.3",
    "express": "^4.17.1",
    "express-json-validator-middleware": "^2.2.1",
    "pino-http": "^6.0.0",
    "prisma": "^3.5.0",
    "statuses": "^2.0.1",
    "undici": "^4.10.1",
    "ws": "^8.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.7",
    "@types/pino-http": "^5.8.1",
    "@types/statuses": "^2.0.0",
    "@types/tap": "^15.0.5",
    "@types/ws": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "dotenv": "^10.0.0",
    "eslint": "^8.2.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "nodemon": "^2.0.15",
    "pino-pretty": "^7.2.0",
    "tap": "^15.1.1",
    "typescript": "^4.5.2"
  },
  "engines": {
    "node": ">=16.5.0"
  }
}
