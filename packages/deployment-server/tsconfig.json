{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "target": "es2021",
    "lib": ["es2021", "DOM"],
    "module": "es2022",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  }
}
